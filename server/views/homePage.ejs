<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
  body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f6f8fa;
    margin: 0;
    padding: 0;
  }
  h1, h2 {
    text-align: center;
    color: #222;
  }
  .product-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
    max-width: 1100px;
    margin: 20px auto;
    padding: 20px;
  }
  .product-item {
    background: #fff;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
  }
  .product-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 28px rgba(0,0,0,0.12);
    background: #fafafa;
  }
  .product-item h2 {
    font-size: 1.2rem;
    margin: 12px 0;
  }
  .product-item button {
    margin-top: 6px;
    padding: 8px 16px;
    border: none;
    border-radius: 8px;
    background: #1976d2;
    color: white;
    cursor: pointer;
    transition: background 0.2s;
  }
  .product-item button:hover {
    background: #0d47a1;
  }
  button {
    margin: 4px;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    background: #ff5722;
    color: #fff;
    cursor: pointer;
    transition: 0.2s;
  }
  button:hover {
    background: #e64a19;
  }
</style>

</head>
<body>
    <h1><%= message %></h1>
    <form action="home/profile" method="get">
        <button type="submit">View Profile</button>
    </form>
    <% if(user === "admin") { %>
        <h2>Admin Panel</h2>
    <div>
      <h2>Add Product</h2>
      <form action ="home/addProduct" method="post">
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" required>
        <br>
        <label for="productDescription">Product Description:</label>
        <textarea id="productDescription" name="productDescription" rows="4" cols="50" required></textarea>
        <br>
        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="productPrice" required>
        <br>
        <label for="productImage">Product Image URL:</label>
        <input type="text" id="productImage" name="productImage" required>
        <button type="submit">Add Product</button>
      </form>
    </div>
    <% }  %>
    <% if (products.length === 0) { %>
      <p>No products available.</p>
    <% } else { %>
      <div class="product-list"> 
          <% products.forEach(product => { %>
            <div class="product-item" onclick="window.location.href='/home/product/<%= product._id %>'">
              <img
  src="<%= product.productImage %>"
  alt="Product image"
  style="
    width: 96px;
    height: 96px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 4px 14px rgba(0,0,0,0.18);
    background: #f3f3f3;
    display: block;
  "
  loading="lazy"
  decoding="async"
/>
                  <h2><%= product.productName %> - $<%= product.productPrice %></h2>
                  
                  <% if (user === "admin") { %>
                    <div class="admin-view">
                      <form  action="/home/product/<%= product._id %>" method="get">
                        <button type="submit">Edit Product</button>
                      </form>
                      <form  action="/home/product/delete/<%= product._id%>" method="post">
                        <button type="submit">Delete Product</button>
                      </form>
                    </div>
                  <% } else { %>
                    <div class="user-view"> 
                      <% if (cartProductIds.includes(product._id.toString())) { %>
                        <form action="home/removeFromCart/<%= product._id %>" method="post">
                          <button type="submit">Remove from Cart</button>
                        </form>
                      <% } else { %>
                        <form action="home/addToCart/<%= product._id %>" method="post">
                          <button type="submit">Add to Cart</button>
                        </form>
                      <% } %>
                      <form  action="/home/buy/<%= product._id %>" method="get">
                        <button type="submit">Buy Now</button>
                      </form>
                    </div>
                  <% } %>
                  <br>
            </div>

          <% }) %>
      </div>
    <% } %>

    <hr>
    <form  action="/signout" method="get">
        <button type="submit">SignOut</button>
    </form>
</body>
</html>