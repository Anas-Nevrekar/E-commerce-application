<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      .product-item {
        cursor: pointer;
        transition: box-shadow 0.2s;
      }
      .product-item:hover {
        box-shadow: 0 0 10px #888;
        background: #f5f5f5;
      }
    </style>
</head>
<body>
    <h1><%= message %></h1>
    <% if(user === "admin") { %>
        <h2>Admin Panel</h2>
    <div>
      <h2>Add Product</h2>
      <form action ="home/addProduct" method="post">
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" required>
        <br>
        <label for="productDescription">Product Description:</label>
        <textarea id="productDescription" name="productDescription" rows="4" cols="50" required></textarea>
        <br>
        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="productPrice" required>
        <br>
        <label for="productImage">Product Image URL:</label>
        <input type="text" id="productImage" name="productImage" required>
        <button type="submit">Add Product</button>
      </form>
    </div>
    <% }  %>
    <% if (products.length === 0) { %>
      <p>No products available.</p>
    <% } else { %>
      <div class="product-list"> 
          <% products.forEach(product => { %>
            <div class="product-item" onclick="window.location.href='/home/product/<%= product._id %>'">
      
              <img src="<%= product.productImage %>" alt="">
                  <h2><%= product.productName %> - <%= product.productPrice %></h2>
                  <h2>Product id: <%= product._id %></h2>
                  <% if (user === "admin") { %>
                    <div class="admin-view">
                      <form  action="home/editProduct" method="get">
                        <button type="submit">Edit Product</button>
                      </form>
                      <form  action="home/deleteProduct" method="get">
                        <button type="submit">Delete Product</button>
                      </form>
                    </div>
                  <% } else { %>
                    <div class="user-view"> 
                    <form  action="home/addCart" method="get">
                      <button type="submit">Add to Cart</button>
                    </form>
                    <form  action="home/buy" method="get">
                      <button type="submit">Buy Now</button>
                    </form>
                  </div>
                  <% } %>
            </div>

          <% }) %>
      </div>
    <% } %>

    <hr>
    <form  action="/signout" method="get">
        <button type="submit">SignOut</button>
    </form>
</body>
</html>