<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Product Page</title>
        <style>
  body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f8f9fa;
    margin: 0;
    padding: 20px;
    text-align: center;
  }
  h1 {
    color: #222;
    margin-bottom: 20px;
  }
  img {
    width: 320px;
    height: 320px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.12);
    margin-bottom: 20px;
  }
  h2 {
    margin: 10px 0;
  }
  p {
    color: #555;
    font-size: 1rem;
  }
  form {
    margin: 12px 0;
  }
  button {
    background: #ff9800;
    border: none;
    border-radius: 8px;
    padding: 10px 24px;
    font-size: 1rem;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.2s;
  }
  button:hover {
    background: #e68900;
  }
  textarea {
    width: 90%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    margin-top: 6px;
  }
</style>

    </head>
    <body>
        <h1>Product Details</h1>
        <div>
            
            <img src="<%= item.productImage %>" alt="">
            <% if (user !== "admin") { %>
                
             <div class="user-view">  
                <h2><%= item.productName %></h2>
                <p><%= item.productDescription %></p>
                <p>Price: $<%= item.productPrice %></p>
                <div >
                    <form action="/home/buy/<%= item._id %>" method="get">
                        <button type="submit">Buy Now</button>
                        <br><br
                    </form>
                </div>
                <% if (cartProductIds.includes(item._id.toString())) { %>
                  <form action="/home/removeFromCart/<%=item._id %>" method="post">
                    <button type="submit">Remove from Cart</button>
                  </form>
                <% } else { %>
                  <form action="/home/addToCart/<%=item._id %>" method="post">
                    <button type="submit">Add to Cart</button>
                  </form>
                <% } %>

              

                <!-- Feedback form -->
                <form action="/feedback/addFeedback/<%= item._id %>" method="post" style="margin-top:16px;">
                  <label for="feedback">Give Feedback:</label><br>
                  <textarea id="feedback" name="feedback" rows="3" cols="40" required></textarea><br>
                  <button type="submit">Submit Feedback</button>
                </form>
            </div> 
            <% } else { %>
                <div class="admin-view">
                    <form action="/home/product/update/<%= item._id %>" method="post">
                        <label for="productName">Product Name:</label>
                        <input type="text" id="productName" name="productName" value="<%= item.productName %>">
                        
                        <label for="productDescription">Product Description:</label>
                        <textarea id="productDescription" name="productDescription"><%= item.productDescription %></textarea>
                        
                        <label for="productPrice">Product Price:</label>
                        <input type="number" id="productPrice" name="productPrice" value="<%= item.productPrice %>">
                        
                        <label for="productImage">Product Image URL:</label>
                        <input type="text" id="productImage" name="productImage" value="<%= item.productImage %>">

                        <button type="submit">Update Product</button>
                    </form>
                    <br>
                    <form action="/home/product/delete/<%= item._id%>" method="post">
                        <button type="submit">Delete Product</button>
                    </form>

                </div>
                <% } %>
            
        </div>
        <br>
        <hr>
        <form action="/home" method="get">
                    <button type="submit">Back to Home</button>
                </form>
    </body>
</html>